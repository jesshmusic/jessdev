{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "indent": ["error", 2, { "ignoredNodes": ["JSXElement *", "JSXElement"]}],
    "react/jsx-indent-props": [2, "first"]
  },
  "globals": {
    "React": "writable"
  }
}
